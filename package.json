{
  "name": "edge-currency-bitcoin",
  "version": "0.3.1",
  "description": "Edge Bitcoin currency plugin",
  "author": "Airbitz, Inc.",
  "contributors": [
    "Eliran Zach <eliran@airbitz.co>",
    "Paul Puey <paul@airbitz.co>",
    "Stan Synko <stan@airbitz.co>"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "git@github.com:Airbitz/edge-currency-bitcoin.git"
  },
  "url": "https://airbitz.co",
  "main": "./lib/index.js",
  "module": "./lib/index.es.js",
  "test": "./lib/index.test.js",
  "scripts": {
    "flow": "npm run build:flow && flow",
    "lint": "standard '**/*.js' && npm run flow",
    "build": "rollup --config $ROLLUPCONFIG && npm run build:flow",
    "build:flow": "flow-copy-source -v -i '**/test/**' src lib",
    "prepare": "ROLLUPCONFIG=rollup.config.js npm run build",
    "test": "npm run lint && mocha",
    "pretest": "ROLLUPCONFIG=rollup.config.test.js npm run build",
    "precommit": "npm run build && npm run lint && npm run test",
    "updot": "updot",
    "security": "nsp check"
  },
  "files": [
    "changelog.md",
    "lib/*"
  ],
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "dependencies": {
    "airbitz-core-types": "git+https://github.com/Airbitz/airbitz-core-types.git",
    "bccoin": "git+https://github.com/thehobbit85/bcoin.git",
    "bcoin": "git+https://github.com/Airbitz/bcoin.git",
    "biggystring": "^1.0.5",
    "buffer": "^5.0.7",
    "flow-bin": "^0.49.1",
    "flow-copy-source": "^1.2.1",
    "husky": "^0.14.3",
    "jsonschema": "^1.2.0",
    "lcoin": "git+https://github.com/Airbitz/lcoin.git#litecoin",
    "uri-js": "^3.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-flow": "^6.23.0",
    "coinstring": "^2.3.0",
    "disklet": "^0.2.4",
    "eslint-plugin-flowtype": "^2.36.0",
    "jsonfile": "^3.0.1",
    "lodash": "^4.17.4",
    "mocha": "^3.5.0",
    "node-fetch": "^1.7.2",
    "nsp": "^2.8.0",
    "request": "^2.81.0",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-replace": "^2.0.0",
    "standard": "^10.0.2",
    "updot": "^1.1.4"
  }
}
