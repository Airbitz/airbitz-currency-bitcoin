{
  "private": true,
  "workspaces": [ "packages/*" ],
  "repository": {
    "type": "git",
    "url": "git@github.com:edgeapp/edge-currency-bitcoin.git"
  },
  "scripts": {
    "build": "npm run format && npm run lint && lerna run build",
    "precommit": "lint-staged && flow",
    "flow": "flow status",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "prepare": "lerna link && lerna exec yarn",
    "test": "lerna run test",
    "link": "lerna link"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "7.2.0",
    "@babel/plugin-transform-flow-strip-types": "7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "hash.js": "^1.1.7",
    "secp256k1": "^3.6.1",
    "flow-bin": "^0.76.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^1.1.3",
    "import-sort-cli": "^5.2.0",
    "import-sort-parser-babylon": "^5.2.0",
    "import-sort-style-module": "^5.0.0",
    "lerna": "^3.10.7",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "^3.0.3",
    "nyc": "^13.0.1",
    "prettier-eslint-cli": "^4.7.1",
    "rollup": "0.64.0",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-flow-entry": "^0.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "source-map-support": "^0.5.9",
    "updot": "^1.1.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "importSort": {
    ".js, .es": {
      "parser": "babylon",
      "style": "module"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier-eslint --list-different"
    ]
  }
}
