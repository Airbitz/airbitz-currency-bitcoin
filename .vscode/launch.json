  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nidavellir",
      "outFiles": ["${workspaceFolder}/packages/nidavellir/build/tests.cjs.js"],
      "program": "${workspaceFolder}/packages/nidavellir/node_modules/.bin/_mocha",
      "args": [
        "--require",
        "source-map-support/register",
        "${workspaceFolder}/packages/nidavellir/build/tests.cjs.js",
        "--reporter",
        "mocha-multi-reporters",
        "--reporter-options",
        "configFile=${workspaceFolder}/packages/nidavellir/mocha-config.json",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/packages/nidavellir/build/tests.cjs.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "edge-currency-bitcoin",
      "program": "${workspaceFolder}/packages/edge-currency-bitcoin/node_modules/.bin/_mocha",
      "args": [
        "-r",
        "sucrase/register",
        "${workspaceFolder}/packages/edge-currency-bitcoin/test/**/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
